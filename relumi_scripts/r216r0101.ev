ev_r126r0101_leader:
	_MACRO_EASY_OBJ_MSG('dp_scenario2', '174-msg_r216r0101_leader', 'Oh, hi! I’m Gardenia.\nI’m Eterna City’s Gym Leader!\rHm, what’s that?\nYou’re a challenger?\rYou’re saying that you came all the way\nfrom Eterna City to find me?!\rOh, I’m so sorry!\rI love Grass-types, you see.\nI came here hoping to catch a Snover.\rIt’s a Pokémon that’s both a\nGrass-type and an Ice-type.\rBut every time you approach it,\nit suddenly starts to hail.\rI wasn’t prepared for it at all!\nI’ll have to try again another time.\rAnyway, I’ll go back to the Gym.\nI’ll be waiting for you, Trainer!')
	_PLAYER_POS_GET(@SCWK_TEMP0, @SCWK_TEMP1)
	_IFVAL_JUMP(@SCWK_TEMP1, 'EQ', 3, 'ev_r216r0101_leader_move_down')
	_IFVAL_JUMP(@SCWK_TEMP0, 'EQ', 5, 'ev_r216r0101_leader_move_left')
	_JUMP('ev_r216r0101_leader_move_down_2')
ev_r216r0101_leader_move_down_2:
	_OBJ_ANIME('R216R0101_LEADER', 'anm_r216r0101_leader_move_down_2')
	_OBJ_ANIME_WAIT()
	_JUMP('ev_r126r0101_leader_end')
ev_r216r0101_leader_move_left:
	_OBJ_ANIME('R216R0101_LEADER', 'anm_r216r0101_leader_left')
