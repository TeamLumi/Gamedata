ev_r216r0101_icebeam:
	_TALK_OBJ_START()
	_IF_FLAGON_JUMP(#2676, 'ev_r216r0101_icebeam_end')
	_SYS_FLAG_BADGE_COUNT(@SCWK_ANSWER)
	_IFVAL_JUMP(@SCWK_ANSWER, 'LE', 4, 'ev_r216r0101_icebeam_noob')
	_MACRO_TALK_KEYWAIT('dp_scenario3', '00_msg_ev_r216r0101_icebeam_strong', 'Oh, hey, you’re a Trainer?\nThat’s awesome!\rWoah, you’re strong, too!\nYou have so many badges!\rI’ve been trying to hone a powerful\nIce-type technique, but I can’t do it.\rI think it would be best used by a\nTrainer stronger than me.\rLike you, in fact!\nI’ll pass this technique on to you.\rIt’s the Technicial Machine containing\nthe Ice-type move: Ice Beam!')
	_LDVAL(@SCWK_TEMP0, 340); Ice Beam TM
	_LDVAL(@SCWK_TEMP1, 1); Quantity 1
	_CALL('ev_item_event')
	_MACRO_TALK_KEYWAIT('dp_scenario3', '00_msg_ev_r216r0101_icebeam_strong_2', 'Ice Beam is a strong, reliable Ice-type\nmove that can freeze the opponent.\rI hope you’ll be able to master it\nin ways that I could not!')
	_TALK_CLOSE()
	_FLAG_SET(#2676)
	_TALK_OBJ_END()
	_END()
ev_r216r0101_icebeam_noob:
	_MACRO_TALK_KEYWAIT('dp_scenario3', '00_msg_ev_r216r0101_icebeam_noob', 'Oh, hey, you’re a Trainer?\nThat’s awesome!\rI’m a Trainer, too. I’m trying to hone\na powerful Ice-type technique.\rI’m not having any luck, though.\nI don’t think I’m strong enough.\rMaybe if I had five badges...\nThat would be enough strength.')
	_TALK_CLOSE()
	_TALK_OBJ_END()
	_END()
ev_r216r0101_icebeam_end:
	_MACRO_TALK_KEYWAIT('dp_scenario3', '00_msg_ev_r216r0101_icebeam_end', 'Hey, Trainer! Are you continuing on\nthe path to greatness?\rI’m still trying to master all sorts\nof techniques.\rI have faith I’m gonna get there!\nNot giving up is my magic!')
	_TALK_CLOSE()
	_TALK_OBJ_END()
	_END()