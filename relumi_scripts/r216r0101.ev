	_JUMP('ev_r126r0101_leader_end')
anm_r216r0101_leader_move_down_2:
	_AC_DIR_D(8)
	_AC_DOWN(2, 8)
	_AC_DIR_L(8)
	_AC_LEFT(1, 8)
	_AC_DIR_D(8)
	_AC_DOWN(3, 8)
