    _MACRO_TALK_KEYWAIT('dp_scenario3', '00_msg_c03r0701_6', 'Take good care of it.\rYour caring for it will make me\nvery happy.\rNow, if you want to talk about stones...\nPlease come and talk to me at any time.')
    _TALK_CLOSE()
    _FLAG_SET(#2782)
    _TALK_OBJ_END()
    _END()
